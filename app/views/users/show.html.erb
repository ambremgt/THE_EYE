


<div class="container-portfolio" style="display: flex;">
  <div class="container-details">
    <div>
      <h2>Specialized in drone image</h2>
      <div style="display: flex;">
        <p class="fas fa-map-marker-alt"></p>
        <p style="margin-left: 10px;"><%= @filmmaker.city %></p>
      </div>
      <div style="display: flex;">
        <%= simple_form_for @chatroom do |form| %>
          <%= form.submit "contact", class: 'experience' %>
          <%= form.hidden "contact", class: 'experience' %>
        <% end %>

        <div style="display: flex; margin-left: 30px;">
          <p class="fas fa-star" style="color: #ffc31e; margin-top: 3px;"></p>
          <p style="margin-left: 7px;">4,7</p>
        </div>
      </div>
    </div>
  </div>
  <div class="container-photo">
    <% if @filmmaker.portfolio_assets %>
      <% @filmmaker.portfolio_assets.each do |asset| %>
        <% asset.photos.each do |photo| %>
          <%= cl_image_tag photo.key, height: 200, width: 300, crop: :fill %>
        <% end %>
      <% end %>
    <% end %>
  </div>
  <div class="name">
    <h2><%= @filmmaker.first_name %> <%= @filmmaker.last_name %></h2>
    <p>Filmmaker</p>
  </div>
</div>

<div style="display: flex; margin-bottom: 50px;">
  <div class="row">
    <div class="col-4">
      <div class="container-description" style="height: 100%">
        <h1>Interest</h1>
          <ul>
            <li><%= @filmmaker.interest_list.first %></li>
          </ul>
      </div>
    </div>
      <div class="col-8">
        <div class="container-description" >
          <h1>Biography</h1>
          <p><%= @filmmaker.biography %></p>
        </div>
        <div class="container-description">
          <h1>Equipments</h1>
          <p><%= @filmmaker.biography %></p>
        </div>
    </div>
  </div>
</div>

<div class="collab">
  <h1>My collaborations</h1>
  <img src="" alt="">
</div>




