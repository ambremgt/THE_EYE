<div class="message-container <%= message.user == current_user ? 'outgoing-msg' : 'incoming-msg' %>">
  <i class="author">
    <span><%= message.user.first_name %></span>
    <small><%= message.created_at.strftime("%b %e | %l:%M%p") %></small>
  </i>
  <p class="message-content"><%= auto_link(message.content) %></p>

</div>
