      <% num = @user.shotlists.length %>
        <% @user.shotlists.reverse_each  do |shotlist|%>
          <div class="dashdo">
            <div class="titlesticky">
              <h1>PROJECT#<%=num%></h1>
            </div>




            <h2 class="line2 animated slideInRight">Title: <%=shotlist.title%></h2>
            <p class="line2 animated slideInRight">Description: <%= shotlist.description%></p>
            <hr class="line2 animated fadeInLeft">
            <% num -= 1 %>

            <% shotlist.shots.each do |shot| %>
              <% if shot %>
                <div class="row">
                  <div class="col">

                    <h2 class="line2 animated fadeInRight">Details of the scene</h2>
                    <h3 class="line2 animated fadeInRight">Description: <%= shot.description %></h3>
                     <% if shot.location.present? %>
                      <p class="line2 animated fadeInRight">Location: <%= shot.location %></p>
                    <% end %>
                    <p class="line2 animated fadeInRight">Angle: <%= shot.angle %></p>
                    <p class="line2 animated fadeInRight">Shote size: <%= shot.shot_size %></p>
                    <p class="line2 animated fadeInRight">Movement: <%= shot.movement %></p>
                    <p class="line2 animated fadeInRight">Equipment: <%= shot.equipment %></p>
                  </div>


                  <div class="col">
                    <h3 class="line2 animated fadeInRight" >Status</h3>
                                      <div class="search-form-control form-inline form-group align-items-center">
                        <%= form_tag results_path, method: :get do %>
                          <%= hidden_field_tag(:shotlist_tag_list, shotlist.shotlist_tag_list) %>
                          <%= hidden_field_tag(:location, shot.location) %>
                          <%= submit_tag "Find matches", class: "btn btn-navbar2 line2 animated fadeInRight" %>

                    <% end %>
                    </div>
                  </div>
                  <% end %>

                  <div class="col">
                    <div class="tags">
                      <% shotlist.shotlist_tag_list.each do |tag| %>
                          <%= link_to tag, results_path(tag: tag) %>
                      <% end %>

                    </div>
                 </div>
              </div>

            <% end %>
          </div>

        <% end %>



