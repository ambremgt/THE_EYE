      <% num = @user.shotlists.length %>
        <% @user.shotlists.reverse_each  do |shotlist|%>
          <div class="dashdo">
            <div class="titlesticky">
              <h1>PROJECT#<%=num%></h1>
            </div>




            <h2 class="line2 mt-5"><%=shotlist.title.upcase%></h2>
            <p class="line2 mt-5"><%= shotlist.description.capitalize%></p>
            <hr class="lineblock">
            <% num -= 1 %>

            <% shotlist.shots.each do |shot| %>
            <% if shot %>
            <div class="description_sticky">
                <div class="row">
                  <div class="col">
                    <h2 class="line2 mt-5">Details of the scene</h2>
                    <h3 class="line2 mt-5">Description:  <%= shot.description %></h3>
                    <h4 class="line2 mt-5">Angle:  <%= shot.angle %></h4>
                    <h4 class="line2 mt-5">Shote size:  <%= shot.shot_size %></h4>
                    <h4 class="line2 mt-5">Movement:  <%= shot.movement %></h4>
                    <h4 class="line2 mt-5">Equipment:  <%= shot.equipment %></h4>
                    <div class="tags">
                      <% shotlist.shotlist_tag_list.each do |tag| %>
                          <%= link_to tag, results_path(tag: tag) %>
                      <% end %>
                       <div class="search-form-control form-inline form-group align-items-center">
                        <%= form_tag results_path, method: :get do %>
                          <%= hidden_field_tag(:shotlist_tag_list, shotlist.shotlist_tag_list) %>

                          <%= submit_tag "Find matches", class: "btn btn-navbar2 line2 mt-5" %>

                    <% end %>
                    </div>
                    </div>
                  </div>



                  <% end %>
                  <div class="col">
                    <div class="tile">
            <img src='https://images.unsplash.com/photo-1464054313797-e27fb58e90a9?dpr=1&auto=format&crop=entropy&fit=crop&w=1500&h=996&q=80'/>
            <div class="text">
            <h1><%=shotlist.title.upcase%></h1>
            <h2 class="animate-text"><%= shotlist.description.capitalize%></h2>
            <p class="animate-text"><%= shot.description %>, Angle: <%= shot.angle %>, Shote size: <%= shot.shot_size %>, Movement: <%= shot.movement %>, Equipment: <%= shot.equipment %></p>
          <div class="dots">
