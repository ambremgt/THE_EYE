<div class="container mt-4">
  <div class="row">
    <div class="col-8">
      <div class="row">
        <% @users.each do |user| %>
        <div class="col-6" style="padding: 10px;">
          <div class="card-trip">
              <% if portfolio.user.photos.attached? %>
              <% portfolio.user.photos.each do |photo| %>
                <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
              <% end %>
              <% end %>
              <div class="card-trip-infos">
                <div>
                  <h2><%= link_to user.first_name, user_path(user) %></h2>
                  <p><%= user.city %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
