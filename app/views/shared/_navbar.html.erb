<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
  <%= link_to "#", class: "navbar-brand text-white" do %>
    <h1>THE EYE</h1>
    <% end %>


  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>

        <li class="nav-item">
          <%= link_to "Home", "/", class: "nav-link btn" %>
          <%= link_to "Dashboard", "/dashboard", class: "nav-link btn" %>
          <%= link_to "Add shotlist", "/shotlists/new", class: "nav-link btn" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link btn" %>

          <% if current_user.photo.attached? %>
            <%= cl_image_tag current_user.photo.key, width: 50, height: 50, crop: :thumb, gravity: :face, class: "avatar-large" %>
          <% end %>

      <% else %>
        <li class="nav-item" style="margin-right: 20px;">
          <%= link_to "Home", "/", class: "nav-link btn" %>
          <%= link_to "Login", new_user_session_path, class: "nav-link btn" %>
          <i class="far fa-user"></i>
        </li>
      <% end %>
    </ul>
  </div>
</div>
