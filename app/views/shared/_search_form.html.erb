

<div class="search-form-control form-inline form-group align-items-center">
  <%= form_tag results_path, method: :get do %>
    <%= text_field_tag :query,
    params[:query], class: "form-control", placeholder: "Search by categories, city..." %>

    <%= button_tag(type: 'submit', class: "btn") do %>
      <i class="fas fa-search"></i>
    <% end %>
  <% end %>
</div>













