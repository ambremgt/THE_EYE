

  <div class="search-form-control form-group align-items-center">
    <%= form_tag results_path, method: :get do %>
      <%= text_field_tag :query,
      params[:query], class: "form-control", placeholder: "Search by categories, city..." %>
      <%= submit_tag "FIND", class: "btn btn-search" %>

      <% end %>
    </div>

<hr>

  <div style="display: flex">
    <p style="margin-top: 3px;">Popular categories:</p>


  <div style="display: flex; margin-top: 10px;">
    <p>Popular categories:</p>
    <% @filmmakers.first(1).each do |filmmaker| %>
      <% filmmaker.interest_list.each do |tag| %>
        <%= link_to tag, results_path(tag: tag), class: "btn-tag" %>
      <% end %>
    <% end %>
  </div>

</div>






